{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            {{ 'Вы зашли под логином'|trans }} {{ app.user.userIdentifier }}, <a href="{{ path('logout') }}">{{ 'Выйти'|trans }}</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">{{ 'Войти в магазин'|trans }}</h1>
    <label for="inputLogin">{{ 'Логин'|trans }}</label>
    <input type="text" value="{{ last_username }}" name="Login" id="inputLogin" class="form-control" autocomplete="username" required autofocus>
    <label for="inputPassword">{{ 'Пароль'|trans }}</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >


        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>


    <button class="btn btn-lg btn-primary" type="submit">
        {{ 'Войти'|trans }}
    </button>
</form>
{% endblock %}
